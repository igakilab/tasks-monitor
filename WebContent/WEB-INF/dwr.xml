<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE dwr PUBLIC
    "-//GetAhead Limited//DTD Direct Web Remoting 3.0//EN"
    "http://getahead.org/dwr//dwr30.dtd">

<dwr>
  <allow>
  	<!-- multiple-dwr -->
    <create creator="new" javascript="MultiplePrinter">
      <param name="class" value="jp.ac.oit.igakilab.dwr.multiple.MultiplePrinter"/>
    </create>
    <create creator="new" javascript="WeightTransition">
      <param name="class" value="jp.ac.oit.igakilab.dwr.multiple.WeightTransition"/>
    </create>
    <convert converter="bean" match="jp.ac.oit.igakilab.dwr.multiple.*" />
    <convert converter="exception" match="java.lang.Exception" />
    <convert converter="bean" match="java.lang.StackTraceElement"/>


	<!-- tasks-monitor -->
    <create creator="new" javascript="TrelloBoardViewer">
    	<param name="class" value="jp.ac.oit.igakilab.tasks.dwr.TrelloBoardViewer"/>
    </create>
    <create creator="new" javascript="AdminMemberEditor">
    	<param name="class" value="jp.ac.oit.igakilab.tasks.dwr.admin.AdminMemberEditor"/>
    </create>
    <create creator="new" javascript="DashBoard">
    	<param name="class" value="jp.ac.oit.igakilab.tasks.dwr.DashBoard"/>
    </create>
    <create creator="new" javascript="SprintPlanner">
    	<param name="class" value="jp.ac.oit.igakilab.tasks.dwr.SprintPlanner"/>
    </create>
    <create creator="new" javascript="SprintFinisher">
    	<param name="class" value="jp.ac.oit.igakilab.tasks.dwr.SprintFinisher"/>
    </create>
    <create creator="new" javascript="BoardMenu">
    	<param name="class" value="jp.ac.oit.igakilab.tasks.dwr.BoardMenu"/>
    </create>
    <create creator="new" javascript="AdminBoardCacheController">
    	<param name="class" value="jp.ac.oit.igakilab.tasks.dwr.admin.AdminBoardCacheController"/>
    </create>


	<!-- tasks-monitor-tests -->
    <create creator="new" javascript="SprintRegister">
    	<param name="class" value="jp.ac.oit.igakilab.tasks.dwr.SprintRegister"/>
    </create>
    <create creator="new" javascript="TestDbConnection">
    	<param name="class" value="jp.ac.oit.igakilab.tasks.test.TestDbConnection"/>
    </create>
    <create creator="new" javascript="Configs">
    	<param name="class" value="jp.ac.oit.igakilab.tasks.dwr.Configs"/>
    </create>
    <create creator="new" javascript="TrelloSimpleTools">
    	<param name="class" value="jp.ac.oit.igakilab.tasks.dwr.TrelloSimpleTools"/>
    </create>
    <convert converter="bean" match="jp.ac.oit.igakilab.tasks.dwr.forms.*"/>
  </allow>
</dwr>
